<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:file:./data/masdb</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>

        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>

        <property name="hbm2ddl.auto">update</property>

        <mapping class="org.example.Entities.Person"/>
        <mapping class="org.example.Entities.Doctor"/>
        <mapping class="org.example.Entities.Ambulance"/>
        <mapping class="org.example.Entities.Apointment"/>
        <mapping class="org.example.Entities.Department"/>
        <mapping class="org.example.Entities.Driver"/>
        <mapping class="org.example.Entities.FirstAidBoat"/>
        <mapping class="org.example.Entities.FirstAidHelicopter"/>
        <mapping class="org.example.Entities.FirstAidVan"/>
        <mapping class="org.example.Entities.Paramedic"/>
        <mapping class="org.example.Entities.Patient"/>
        <mapping class="org.example.Entities.SurgicalBoat"/>
        <mapping class="org.example.Entities.SurgicalHelicopter"/>
        <mapping class="org.example.Entities.SurgicalVan"/>
        <mapping class="org.example.Entities.Patient_Ambulance"/>

    </session-factory>
</hibernate-configuration>
